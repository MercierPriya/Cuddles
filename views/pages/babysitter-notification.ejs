<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/babysitter-notification.css">
    <title>Notifications</title>
</head>
<body>
    <div class="wrapper">
    <%- include('../partials/babysitter-navbar', {reservationsCount,unreadCount}) %>
    
<h2>üîî Vos notifications</h2>
<% const unreadNotifications = notifications.filter(n => !n.isRead); %>

<ul class="notifications-list">
  <% if (notifications.length === 0) { %>
    <li class="no-notification" style="text-align:center;">Aucune notification r√©cente</li>
  <% } else { %>
    <% notifications.slice().reverse().forEach(n => { %>
      <li class="unread">
        <div class="notification-message"><%= n.message %></div>
        <div class="notification-date">Envoy√© le <%= n.createdAt.toLocaleDateString() %></div>
      </li>
    <% }) %>
  <% } %>
</ul>


    <h2>üîî Notifications de R√©servations</h2>

<% if (reservations.length > 0) { %>
    <ul class="reservation-list">
        <% reservations.forEach(reservation => { %>
           <li class="reservation-item 
  <%= reservation.status === 'confirmed' ? 'confirmed' : 
      reservation.status === 'rejected' ? 'rejected' : 'pending' %>">


                <strong>Parent :</strong> <%= reservation.parentId.name %> <br>
                <strong>Enfants :</strong> 
                <% reservation.childDetails.forEach(child => { %>
                    <span><%= child.name %> (√Çge: <%= child.age %>)</span>
                <% }) %> <br>
                <strong>Date :</strong> <%= new Date(reservation.startDate).toLocaleDateString('fr-FR', { day: '2-digit', month: 'long', year: 'numeric' }) %> 
                - 
                <%= new Date(reservation.endDate).toLocaleDateString('fr-FR', { day: '2-digit', month: 'long', year: 'numeric' }) %> <br>
                <strong>Pr√©f√©rences :</strong> <%= reservation.timePreference %> <br>
                <strong>T√©l√©phone :</strong> <%= reservation.phone %> <br>
                <strong>Message :</strong> <%= reservation.specialRequest || 'Aucune demande sp√©ciale' %> <br>
                <% if (reservation.status === 'confirmed') { %>
                    <span class="status-confirmed">‚úÖ R√©servation Confirm√©e</span>
                <% } else if (reservation.status === 'rejected') { %>
                    <span class="status-rejected">‚ùå R√©servation Rejet√©e</span>
                <% } else { %>
                <button class="accept-btn"><a href="/accept/<%= reservation._id %>">Accepter</a></button>
                <button class="reject-btn"><a  href="/reject/<%= reservation._id %>">Refuser</a></button>
                <% } %>
            </li>
        <% }) %>
    </ul>
<% } else { %>
    <p>Aucune r√©servation en attente.</p>
<% } %>
<%- include('../partials/simple-footer') %>
</div>
</body>
</html>